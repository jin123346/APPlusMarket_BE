<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aplus.aplusmarket.mapper.chat.ChatRoomMapper">

    <!-- 특정 채팅방 ID에 대한 메시지 조회 -->
    <select id="selectMessagesByChatRoomId" parameterType="int" resultType="com.aplus.aplusmarket.entity.ChatMessage">
        SELECT *
        FROM tb_chat_message
        WHERE chat_room_id = #{chatRoomId}
    </select>

</mapper>